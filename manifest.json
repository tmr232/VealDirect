{
  "name": "pRedirect",
  "version": "1.0",
  "description": "Ask before URL redirections!",
  
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "contextMenus",
                  "*://tinyurl.com/*", "*://bit.ly/*", "*://goo.gl/*"],
  "background": {
    "scripts": ["background.js"]
  },

  "manifest_version": 2
}
