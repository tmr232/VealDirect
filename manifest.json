{
  "name": "VealDirect",
  "version": "1.0",
  "description": "Reveal URL redirections",
  
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "contextMenus",
                  "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
      
  "content_scripts" : [
        {
            "matches": ["<all_urls>"],
            "js":["content.js", "overlay.js"],
            "css":["content.css"]
            }
    ],
        
    "web_accessible_resources": [
        "veal.svg"
        ],
          "icons": {
    "16": "Veal16.png",
    "48": "Veal48.png",
    "128": "Veal128.png"
  },

  "manifest_version": 2
}
