{
  "name": "pRedirect",
  "version": "1.0",
  "description": "Ask before URL redirections!",
  
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "contextMenus",
                  "*://tinyurl.com/*", "*://bit.ly/*", "*://goo.gl/*", "file://*"],
  "background": {
    "scripts": ["background.js"]
  },
      
  "content_scripts" : [
        {
            "matches": ["<all_urls>"],
            "js":["content.js"],
            "css":["content.css"]
            }
    ],

  "manifest_version": 2
}
